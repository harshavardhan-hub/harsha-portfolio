{
  "name": "harsha-portfolio",
  "version": "1.0.0",
  "description": "Harsha Vardhan Portfolio Website",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "cd frontend && npm install && npm run build",
    "postbuild": "echo 'Build completed. Contents:' && ls -la frontend/dist",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
